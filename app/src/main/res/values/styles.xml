<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="android:fontFamily">@font/be_vietnam_pro_medium</item>
        <item name="android:textColor">?attr/color_main_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">@font/be_vietnam_pro_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:fontFamily">@font/be_vietnam_pro_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Gray">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/color_light_text</item>
    </style>

    <style name="Text.Gray.Bold">
        <item name="android:fontFamily">@font/be_vietnam_pro_medium</item>
        <item name="android:textColor">?attr/color_light_text</item>
    </style>

    <style name="Text.Gray.Light">
        <item name="android:fontFamily">@font/be_vietnam_pro_regular</item>
        <item name="android:textColor">?attr/color_class_info</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Search" parent="Text">
        <item name="android:fontFamily">@font/be_vietnam_pro_medium</item>
        <item name="android:textColor">?attr/color_main_text</item>
        <item name="android:textColorHint">?attr/color_day_border</item>
        <item name="android:background">@drawable/ic_search_form</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Button" parent="Text">
        <item name="android:fontFamily">@font/be_vietnam_pro_semibold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:background">@drawable/dr_button_accent</item>
    </style>

    <style name="Divider">
        <item name="android:background">?attr/color_search_form_border</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

</resources>